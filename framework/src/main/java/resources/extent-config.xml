<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- report theme: standard, dark -->
        <theme>dark</theme>

        <!-- document encoding: defaults to UTF-8 -->
        <encoding>UTF-8</encoding>

        <!-- protocol for script and stylesheets: defaults to https -->
        <protocol>https</protocol>

        <!-- title of the document -->
        <documentTitle>ExtentReports 2.0</documentTitle>

        <!-- Report name - displayed at top-nav-->
        <reportName>
            <!--Add a logo! (Not sure how to do it without the absolute path yet. Needs a relative path)-->
            <![CDATA[<img width="25" height="25" alt="ABL Logo"
            src="C:/Kali's Files/0_IdeaProjects/KaliTAF/framework/src/main/java/resources/ABLlogo.png"/>]]>
        </reportName>

        <!-- report headline - displayed at top-nav, after reportHeadline -->
        <reportHeadline>KaliTAF Report - Automation Report Headline!</reportHeadline>

        <!-- global date format override: defaults to yyyy-MM-dd -->
        <dateFormat>yyyy-MM-dd</dateFormat>

        <!-- global time format override: defaults to HH:mm:ss -->
        <timeFormat>HH:mm:ss</timeFormat>

        <!-- custom javascript -->
        <scripts>
            <![CDATA[$(document).ready(function(){});]]>
        </scripts>
        <scripts>
            <!--Display dashboard pie chart at top of report by default-->
            <![CDATA[$(document).ready(function(){$('#enableDashboard').click();});]]>
        </scripts>

        <!-- custom styles -->
        <styles>
            <![CDATA[     ]]>
        </styles>
    </configuration>
</extentreports>